<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Servlet_index</servlet-name>
        <servlet-class>controlador.Servlet_index</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Servlet_InicioSesion</servlet-name>
        <servlet-class>controlador.Servlet_InicioSesion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Servlet_Email</servlet-name>
        <servlet-class>controlador.Servlet_Email</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Servlet_usuario_Editar</servlet-name>
        <servlet-class>controlador.Servlet_usuario_Editar</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Servlet_index</servlet-name>
        <url-pattern>/servlet_index</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Servlet_InicioSesion</servlet-name>
        <url-pattern>/Servlet_InicioSesion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Servlet_Email</servlet-name>
        <url-pattern>/servlet_Email</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Servlet_usuario_Editar</servlet-name>
        <url-pattern>/servlet_usuario_Editar</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
